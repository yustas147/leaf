<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="leaf_area_tree_view">
            <field name="name">leaf.area.tree.view</field>
            <field name="model">leaf.area</field>
            <field name="sequence">10</field>
            <field name="arch" type="xml">
                <tree string="Areas" editable="bottom">
                    <!--<field name="name"/>-->
                    <field name="name"/>
                    <field name="global_id"/>
                    <field name="a_type"/>
                    <field name="external_id"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="leaf_area_form_view">
            <field name="name">leaf.area.form.view</field>
            <field name="model">leaf.area</field>
            <field name="sequence">20</field>
            <field name="arch" type="xml">
                <form string="Area">
                    <!--<header>-->
                        <!--<field name="state" widget="statusbar"/>-->
                    <!--</header>-->
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="global_id"/>
                            <field name="a_type"/>
                            <field name="external_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
   </data>
</openerp>
